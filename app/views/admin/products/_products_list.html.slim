- products.each do |product|
  .product-item.border.rounded.p-4.mb-4
    h3.text-lg.font-bold= product.name
    p= product.description
    p Price: #{number_to_currency(product.product_variants.first.price, unit: "â‚±")}
    p Stock: #{product.product_variants.first.stock}
    // Actions for Edit and Delete
    .actions.mt-2
      = link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-secondary'
      = button_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
