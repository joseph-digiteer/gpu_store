<div class="container mx-auto p-4">
  <h1 class="text-4xl font-bold mb-4">My Orders</h1>
  <table class="min-w-full bg-white border border-gray-200">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b">Order ID</th>
        <th class="py-2 px-4 border-b">Total Amount</th>
        <th class="py-2 px-4 border-b">Status</th>
        <th class="py-2 px-4 border-b">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="py-2 px-4 border-b"><%= order.id %></td>
          <td class="py-2 px-4 border-b">$<%= order.total_amount %></td>
          <td class="py-2 px-4 border-b"><%= order.status %></td>
          <td class="py-2 px-4 border-b">
            <%= link_to 'View', customers_order_path(order), class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
